{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "rootDir": "src",
    "outDir": "dist",
    "incremental": true,
    "tsBuildInfoFile": "dist/.tsbuildinfo",
    "paths": {
      "@tscmono/utils": [
        "../utils"
      ]
    }
  },
  "include": [
    "src",
    "schema-types",
    "src/**/*"
  ],
  "exclude": [
    "src/**.spec.ts",
    "src/**.spec.tsx"
  ],
  "references": [
    {
      "path": "../utils/tsconfig.json"
    }
  ]
}