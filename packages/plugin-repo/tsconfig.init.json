{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "rootDir": "src",
    "outDir": "dist",
    "incremental": true,
    "tsBuildInfoFile": "dist/.tsbuildinfo"
  },
  "include": [
    "src/**/*",
    "src/**/*.json"
  ],
  "exclude": [
    "src/**.spec.ts",
    "src/**.spec.tsx"
  ],
  "references": [
    {
      "path": "../config/tsconfig.json"
    },
    {
      "path": "../utils/tsconfig.json"
    }
  ]
}